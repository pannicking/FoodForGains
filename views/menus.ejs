<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" type="text/css" href="styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



  <style>
    

    .menu-heading {
      color: white;
      font-family: 'Times New Roman', serif;
      text-align: center;
    }

    .menu-category {
      color: white;
      font-family: 'Times New Roman', serif;
      text-align: center;
      margin-top: 20px; 
    }
/* category is for each menu and for when i divide the sections into 3 for it */

    .menu-card {
      margin-bottom: 20px;
      background-color: #ffffff;
      border: none;
      /*  Remove card border */
      color: black;
      height:100%;
      /* to make the cards all same size */
    }

   
  </style>
</head>

<body
  background="https://static.vecteezy.com/system/resources/previews/030/315/389/large_2x/blurred-background-of-a-restaurant-bar-interior-with-a-wooden-table-vertical-mobile-wallpaper-ai-generated-free-photo.jpg">
  <%- include ('partials/navbar.ejs') %>

    <h1 class="menu-heading">MENU</h1>
    <div class="container">
      <div class="row">
        <% let categories=["Breakfast", "Lunch" , "Dinner" , "Drinks" ]; %>
          <% menus.forEach((menu, index)=> { %>
            <% if (index % 3===0) { %>
              <div class="col-12">
                <h3 class="menu-category">
                  <%= categories[Math.floor(index / 3)] %>
                </h3>
              </div>
              <% } %>
                <div class="col-md-4">
                  <div class="card menu-card">
                    <img src="<%= menu.image %>" class="card-img-top" alt="Menu Image">
                    <div class="card-body">
                      <h5 class="card-title">
                        <%= menu.name %>
                      </h5>
                      <p class="card-text">Ingredients: <%= menu.ingredients %>
                      </p>
                      <p class="card-text">Protein Intake: <%= menu.protein_intake %> grams</p>
                      <p class="card-text">Calories Intake: <%= menu.calorie_intake %> kcal</p>
                    </div>
                  </div>
                </div>
                <% }); %>
      </div>
    </div>

</html>