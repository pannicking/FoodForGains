<head>
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body background="https://wallpapers.com/images/hd/restaurant-background-ua09rq3u85yphzt4.jpg">
    <%- include ('partials/navbar.ejs') %>
        <section id="reserve" class="container py-5">

            <div class="container mt-3 ">
                <h2 style="color:white; font-family: 'Times New Roman', serif;">Reserve A Table</h2>
                <form action="/submit" method="post">
                    <div class="mb-3 mt-3">
                        <label for="name" style="color: #ffffff; font-family: 'Times New Roman', serif;">Name:</label>
                        <input type="name" class="form-control" id="name" placeholder="Enter Name" name="name">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="email" style="color: #ffffff; font-family: 'Times New Roman', serif;">Email:</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email">
                    </div>


                    <div class="mb-3 mt-3">
                        <label for="contact" style="color: #ffffff; font-family: 'Times New Roman', serif;">Contact No.: </label>
                        <input type="contact" class="form-control" id="contact" placeholder="Enter Contact No."
                            name="contact">
                    </div>

                    <div class="mb-3 mt-3">
                        <label for="pax" style="color: #ffffff; font-family: 'Times New Roman', serif;">Number of Pax:</label>
                        <input type="pax" class="form-control" id="pax" placeholder="Enter no. of pax" name="pax">
                    </div>

                    <div class="mb-3 mt-3">
                        <label for="datetime" style="color: #ffffff; font-family: 'Times New Roman', serif;">Date and Time:</label>
                        <input type="datetime-local" class="form-control" id="datetime" name="datetime" required>
                    </div>





                    <button type="submit" class="btn btn-primary" style="background-color: #301e0d; color: #ffffff;">Submit</button>
                </form>
            </div>
        </section>
</body>